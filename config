# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	tray_output none
	workspace_buttons yes
	strip_workspace_numbers yes
        font pango:DejaVu Sans Mono for Powerline 10 
        position top
        colors {
                background #282828
                focused_workspace #637200 #637200 #002b36
		separator #000000
        }
        status_command ~/bumblebee-status/bumblebee-status -d -m cpu disk:root nic memory date time layout amixer kernel -p root.path=/ date.format="%a, %b %d %Y" time.format="%l:%M:%S%P" -t powerline

}

#ALWAYS ON THINGS
exec_always feh --bg-scale ~/Pictures/shiny_colors.jpeg 		#Applies background to desktop
exec_always compton 							#Allows transparency 

#SHUTDOWN COMMAND
bindsym $mod+Shift+x exec shutdown now					#Shutdown computer
bindsym $mod+Shift+BackSpace exec reboot				#Reboots computer

#AMIXER CONTROLS
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute		# Raises Volume
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute		# Lowers Volume
bindsym XF86AudioMute exec amixer -D pulse set Master Playback Switch toggle 	#Mutes/Unmutes volume

#WINDOW SETTINGS
new_window 1pixel

#KEYBINDINGS FOR APPS
bindsym $mod+Return exec i3-sensible-terminal		 			#Starts a terminal
bindsym $mod+q workspace $ws2; exec qutebrowser					#Starts qutebrowser
bindsym $mod+g workspace $ws3; exec gimp					#starts gimp
bindsym $mod+r exec --no-startup-id i3-sensible-terminal -e ranger		#starts ranger
bindsym $mod+t exec thunar							#starts thunar
bindsym $mod+Shift+f workspace $ws2; exec firefox				#starts firefox
bindsym $mod+Shift+v workspace $ws4; exec i3-sensible-terminal -e vim		#starts vim

#FOR WINDOW COMMANDS
for_window [class="Thunar"] floating enable 

#RESIZING WINDOWS
