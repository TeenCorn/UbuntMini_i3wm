bindsym $mod+Shift+u resize shrink height 30 px or 30 ppt

#SCREENSHOTS
bindsym $mod+F6 exec scrot -q 100 -e 'mv $f ~/Pictures/Screenshots'

#LANGUAGE
set $keyboard_layout Keyboard Layout: (j) Canadian French, (e) US English
mode "$keyboard_layout" {

bindsym j exec --no-startup-id setxkbmap ca -variant ja,mode "default"
bindsym e exec --no-startup-id setxkbmap us ,mode "default"

# back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
}
bindsym $mod+Shift+z mode "$keyboard_layout" 
