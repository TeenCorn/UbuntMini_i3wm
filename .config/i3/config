#ROFI 
bindsym $mod+d exec rofi -show run -lines 5 -eh 2 -width 100 -padding 350 -opacity "80" -bw 0 -bc "$lightBlack" -bg "$lighterBlack" -fg "$white" -hlbg "$whitish" -columns 2 -hlfg "#9575cd"
