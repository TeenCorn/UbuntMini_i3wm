##KEY_BINDINGS##############################################################

#i3wm_STARTUP_APPS
exec_always --no-startup-id feh --bg-scale ~/.config/wall.jpg			#Applies background to desktop
exec --no-startup-id compton 								#Allows transparency
exec --no-startup-id nm-applet						# Puts nm icon in corner
exec --no-startup-id pasystray						#Gives me a way to convinently control volume levels as well as inputs and outputs
exec --no-startup-id mpd						#Music player daemon
exec --no-startup-id $term --name=dropdown 				#Dropdown term
exec --no-startup-id synclient TouchpadOff=1			#Turns off touchpad
exec_always --no-startup-id ~/.config/polybar/launch.sh

##SHUTDOWN COMMAND
bindsym $mod+Shift+x exec systemctl poweroff 				#Shutdown computer
bindsym $mod+Shift+BackSpace exec systemctl reboot 			#Reboots computer
bindsym $mod+BackSpace exec .config/i3/lock.sh 				#Locks and suspends

##Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

#MEDIA_KEYS
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym $mod+p exec mpc -p 6601 toggle
bindsym $mod+Shift+p exec mpc -p 6601 pause
bindsym $mod+period exec mpc -p 6601 next
bindsym $mod+Shift+period exec mpc -p 6601 seek +10
bindsym $mod+comma exec mpc -p 6601 prev
bindsym $mod+Shift+comma exec mpc -p 6601 seek -10

#APP_KEYS
bindsym $mod+Return exec $term				 		#Starts a terminal
bindsym $mod+q workspace $ws2; exec qutebrowser					#Starts qutebrowser
bindsym $mod+g workspace $ws3; exec gimp					#starts gimp
bindsym $mod+r exec --no-startup-id $term --name=ranger -e ranger				#starts ranger
bindsym $mod+e exec thunar							#starts thunar
bindsym $mod+Shift+f workspace $ws2; exec firefox				#starts firefox
bindsym $mod+v workspace $ws3; exec termite -e vim			#starts vim
bindsym $mod+Shift+s scratchpad show
bindsym $mod+F8 exec /home/teencorn/android-studio/bin/studio.sh
bindsym $mod+semicolon exec $term --name=htop --config=/home/teencorn/.config/termite2/config -e htop
bindsym $mod+F12 exec $term --name=ncmpcpp -e ncmpcpp
bindsym $mod+w exec $term --name=w3m -e "w3m -B"
