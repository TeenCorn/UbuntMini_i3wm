# ROFI
bindsym $mod+d $exec "rofi -show run -width 55 -sidebar-mode -eh 2 -lines 3 -separator-style solid -font \\"mono 12\\" -bw 0 -hide-scrollbar -color-window \\"#55508d, #ffb6c1, #000000\\" -color-normal \\"#7d8cc4, #000000, #bee7e8, #191919, #ffffff\\""

# SCREENSHOTS
bindsym $sup+s $exec scrot '%Y-%m-%d_$wx$h.png' -q 100 -e 'mv $f ~/Pictures/Screenshots'

# Brightness adjustment
bindsym XF86MonBrightnessUp $exec xbacklight -inc 10 		# increase screen brightness
bindsym XF86MonBrightnessDown $exec xbacklight -dec 10 		# decrease screen brightness

# Show dropdown terminal
bindsym $mod+o move scratchpad
