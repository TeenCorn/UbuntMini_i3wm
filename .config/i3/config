bindsym $mod+F12 workspace $ws10; append_layout ~/.config/i3/workspace-10.json, $exec $term --name=alsa -e "alsamixer -c 1", $exec $term --name=ncmpcpp -e ncmpcpp, $exec $term --name=cava -e 'cava'
